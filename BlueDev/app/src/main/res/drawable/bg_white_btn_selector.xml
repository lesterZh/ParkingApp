<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle"
            >
            <gradient android:angle="90.0" android:centerX="0.5" android:centerY="0.5" android:endColor="#fff" android:startColor="#ffededed" android:type="linear"/>
            <stroke android:width="0.5dip" android:color="#ffcfcfcf"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
            >
            <gradient android:angle="90.0" android:centerX="0.5" android:centerY="0.5" android:endColor="#ffededed" android:startColor="#fff" android:type="linear"/>
            <stroke android:width="0.5dip" android:color="#ffcfcfcf"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>