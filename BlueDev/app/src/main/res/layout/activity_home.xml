<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divideColorGray"/>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_index_clinic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_index_clinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_index_gy_selector"
                />
            <TextView
                android:id="@+id/tv_index_clinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近停车场"
                android:textColor="@drawable/index_text_color_selector"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_index_health_manage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_index_health_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_index_jk_selector"
                />
            <TextView
                android:id="@+id/tv_index_health_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textColor="@drawable/index_text_color_selector"
                android:textSize="12sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_index_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_index_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_index_xx_selector"
                />
            <TextView
                android:id="@+id/tv_index_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停车记录"
                android:textColor="@drawable/index_text_color_selector"
                android:textSize="12sp"/>
        </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/view_center"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_index_message_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="#fff"
                android:textSize="12sp"
                android:background="@drawable/bg_message_notify"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/view_center"
                android:layout_above="@id/view_center"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_index_mygaia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_index_mygaia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_index_wd_selector"
                />
            <TextView
                android:id="@+id/tv_index_mygaia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户中心"
                android:textColor="@drawable/index_text_color_selector"
                android:textSize="12sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
