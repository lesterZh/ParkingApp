<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/systemBule"
        android:gravity="center"
        android:text="设定车牌号"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <EditText
            android:id="@+id/et_old_pwd"
            style="@style/RegistEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="输入车牌号"/>

        <EditText
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:id="@+id/et_new_pwd"
            style="@style/RegistEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="新密码"/>

        <EditText
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:id="@+id/et_new_pwd2"
            style="@style/RegistEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="重复新密码"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_ok"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bg_blue_btn_border"
                android:textColor="@color/blue"
                android:text="确定"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_cancle"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bg_gray_btn_border"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>