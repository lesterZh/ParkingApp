<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/systemBule"
    android:gravity="center"
    android:text="停车费用结算"
    android:textColor="#fff"
    android:textSize="18dp"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <TextView
        android:id="@+id/tv_fee"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="您本次需要支付的费用为：15"/>
</RelativeLayout>
<LinearLayout
    android:id="@+id/ll_ali_pay"
    android:layout_width="317dp"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_input"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_forms_alipay"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="支付宝"/>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        />
    <ImageView
        android:id="@+id/iv_ali_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_forms_checkmarks"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/ll_weixin_pay"
    android:layout_width="317dp"
    android:layout_height="40dp"
    android:background="@drawable/bg_input"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_forms_wechat"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:text="微信"/>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        />
    <ImageView
        android:id="@+id/iv_weixin_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_forms_checkmarks"
        android:visibility="invisible"/>
</LinearLayout>


    <LinearLayout
        android:id="@+id/ll_yuer_pay"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_input"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/accout"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:paddingLeft="7dp"
            android:text="账户余额"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:id="@+id/iv_yuer_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_forms_checkmarks"
            android:visibility="invisible"/>
    </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

<Button
    android:id="@+id/btn_confirm_pay"
    android:layout_width="317dp"
    android:layout_height="40dp"
    android:background="@drawable/btn_start_blue_selector"
    android:textSize="17sp"
    android:text="确认支付"
    android:layout_marginBottom="10dp"
    android:textColor="#fff"/>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_start_blue_selector"
        android:textSize="17sp"
        android:text="返回"

        android:layout_marginBottom="40dp"
        android:textColor="@color/white"/>
</LinearLayout>