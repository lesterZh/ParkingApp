<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <include layout="@layout/base_title_bar"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_gray_border_edittext"

        android:drawableLeft="@drawable/icon_id"
        android:hint="手机号"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="15sp"
        />


    <LinearLayout
        android:visibility="gone"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_border_edittext"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edit_verification_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="验证码"
            android:inputType="numberDecimal"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btn_send_verification_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.5"
            android:background="@drawable/bg_verification_botton"
            android:text="发送验证码"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_border_edittext"
        android:drawableLeft="@drawable/icon_password"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"

        android:textSize="15sp"
        android:visibility="visible"
        />

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_gray_border_edittext"
        android:drawableLeft="@drawable/icon_password"
        android:hint="重复密码"
        android:inputType="textPassword"
        android:singleLine="true"

        android:textSize="15sp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/btn_regist"
        style="@style/ButtonBlueSolidStyle"

        android:layout_marginTop="30dp"
        android:text="注册"
        />


</LinearLayout>
