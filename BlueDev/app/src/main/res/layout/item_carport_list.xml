<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/systemBackground" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="停车位001"
            android:textColor="@color/TextColorDarkGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_text"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:layout_marginRight="20dp"
            android:text="可用"
            android:textColor="@color/TextColorWhite"
            android:textSize="13sp" />

        <ImageView
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="15dp"
            android:scaleType="center"
            android:src="@drawable/icon_trash_selector" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/divideColorGray" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/debug_image_girl" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/divideColorGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="收费标准：¥15/小时"
            android:textColor="@color/TextColorLightGray"
            android:textSize="14sp" />

        <Button
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_gray_btn_border"

            android:text="我要预约" />

        <Button
            android:id="@+id/btn_park_in"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_blue_btn_border"
            android:text="我要停车"
            android:textColor="@color/systemBule" />
    </LinearLayout>

</LinearLayout>