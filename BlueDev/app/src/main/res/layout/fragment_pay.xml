<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/systemBule"
        android:gravity="center"
        android:text="充值"
        android:textColor="#fff"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_input"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="金额"/>
        <EditText
            android:id="@+id/et_input_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:gravity="right"
            android:hint="100"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ali_pay"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_forms_alipay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="支付宝"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:id="@+id/iv_ali_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_forms_checkmarks"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weixin_pay"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_input"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_forms_wechat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="微信"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:id="@+id/iv_weixin_selected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_forms_checkmarks"
            android:visibility="invisible"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_confirm_pay"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_start_blue_selector"
        android:textSize="17sp"
        android:text="确认支付"
        android:layout_marginBottom="40dp"
        android:textColor="#fff"/>
</LinearLayout>
